@model MovieNightController
{
    ViewData["Title"] = "Movie Search";
}

<h2>Movie Search</h2>

<form method="get" action="@Url.Action("Search", "Home")">
    <div class="form-group">
        <label for="movieTitle">Movie Title:</label>
        <input type="text" id="movieTitle" name="title" class="form-control" placeholder="Enter the movie title" required>
    </div>
    <button type="submit"></button> class="btn btn-primary">Search</button>
</form>
